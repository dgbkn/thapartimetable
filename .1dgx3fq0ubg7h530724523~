<?php 
if(isset($_GET['id'])){
$id_to_delete = $_GET['id'];
$sql = "DELETE FROM `r_contract` WHERE CONCAT(`r_contract`.`id`) = $id_to_delete ";
$result = mysqli_query($conn, $sql);


if (isset($id_to_delete)) {
    if ($result) {
       echo '<script>location.replace("contract_view.php");</script>';
    } else {
        echo '<div class="container">'."<h6> Error deleting record: ".'</div>' ;
    }
}
else{
    echo '<div class="container">'."<h6> id:$id_to_delete dosen't exists ".'</div>';
}


}
else{ ?>
    <h3 style="margin-left:30px;">Check Your URL 404 Error </h3>
<?php }

?>
